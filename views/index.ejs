</head>
<body>
    <%- include('includes/navigation.ejs') %>

    <div class="x_container">
        <div class="xx_container">
        <h1 class="h1-color">
            <span class="span-color1">Failure</span>
            <span class="span-color2"> Is Not </span
            ><span class="span-color3">Lose</span>
        </h1>
        <h2 class="h2-color">Work Done</h2>
        <h4 class="h4-color">
            with the burma's largest code error solution website
        </h4>
        </div>
    </div>

    <div class="parent__div">
        <div class="first__div">
            
        </div>

        <main class="main__class">
            <% if (prods.length > 0) { %>
                <div class="main__div">
                        <% prods.forEach((product) => { %>
                        <div class="post__item">
                            <div class="post__title">
                                <h1><a href="/detail" class="h1__title"><%= product.title %></a></h1>
                            </div>
                            
                            <!-- <div class="post__category">
                                <div class="span_post__category">
                                    <a href="#" class="category__padding"><%= product.category %></a>
                                </div>
                            </div> -->
                            <span><%= product.category %></span>

                            <div class="post__description">
                                <p class="p__description"><%= product.description %></p>
                            </div>

                            <div>
                                <img src="<%= product.image%>" alt="">
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <h1 id="NPF">No Post Found!</h1>
            <% } %>
        </main>

        <div class="last__div">

        </div>
    </div>

    

    <%- include('includes/script.ejs') %> 
    
    <%- include('includes/end.ejs') %>

