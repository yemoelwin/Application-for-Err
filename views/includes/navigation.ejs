<header>
    <a class="logo <%= path === '/' %> ? 'active' : '' %>" href="/">Vision</a>

    <div class="group">
        <ul class="navigation">
            <% if (isAuthenticated) { %>
            <li>
                <a class="<%= path === '/user/profile' %> ? 'active' : '' %>" href="/user/profile">Profile</a>
            </li>

            <li>
                <a class="<%= path === '/user/add-post' %> ? 'active' : '' %>" href="/user/add-post">Add Post</a>
            </li>
            <% } %>

            <!-- <li>
                <a class="<%= path === '/detail-page' %> ? 'active' : '' %>" href="/post-detail">All Questions</a>
            </li> -->

            <% if (!isAuthenticated) { %>
            <li>
                <a class="<%= path === '/login' %> ? 'active' : '' %>" href="/login">Login</a>
            </li>

            <% } else { %>
            <li>
                <form action="/logout" method="post">
                    <button type="submit" style="cursor: pointer;">Logout</button>
                </form>
            </li>
            <% } %>

        </ul>


        <div class="search">
        <% if (isAuthenticated) { %>
            <span class="icon">
                <ion-icon name="search-outline" class="searchBtn"></ion-icon>
                <ion-icon name="close-outline" class="closeBtn"></ion-icon>
            </span>
        </div>
        <div>
            <ion-icon name="menu-outline" class="menuToggle"></ion-icon>
        </div>

        <div class="searchBox">
            <input type="text" placeholder="Search here ...." />
        </div>
        <% } %>
</header>
