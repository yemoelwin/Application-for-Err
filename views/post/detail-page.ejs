<%- include('../includes/head.ejs') %> 
  
<%- include('../includes/css.ejs') %>
  
<link rel="stylesheet" href="../css/main.css" />
<link rel="stylesheet" href="../css/detail-page.css" />
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  
    

    <div class="stack-index">
      <div class="stack-index-content">
        <div class="sidebar">

          <div class="sidebar-container">

            <div class="sidebar-options">

              <div class="sidebar-option">
                <a href="">Home</a>
              </div>

              <div class="sidebar-option">
                <a href="">PUBLIC</a>
                <div class="link">
                  <div class="link-tag">
                    <i class="fa-solid fa-globe"></i>
                    <a href="">Questions</a>
                  </div>
                  <div class="tags">
                    <p>Tags</p>
                    <p>Users</p>
                  </div>
                </div>
              </div>

              <div class="sidebar-option">
                <p>COLLECTIVES</p>
                <div class="link">
                  <div class="link-tag">
                    <i class="fa-regular fa-star"></i
                    ><a href="">Explore Collectives</a>
                  </div>
                  <div class="tags"></div>
                </div>
              </div>

            </div>

          </div>
        </div>
        <div class="main">
          <div class="main-container">
            <div class="main-top">
              <h2 class="main-question">Testing</h2>
              <button><a href="/user/add-post"> Ask Question</a></button>
            </div>
            <div class="main-description">
              <div class="info">
                <p>Timestamp</p>
                <p>Avtive <span>today</span></p>
                <p>View<span>15 times</span></p>
              </div>
            </div>
            <div class="all-questions-container">
              <div class="all-questions-left">
                <div class="all-options">
                  <p class="arrow">▲</p>
                  <p>0</p>
                  <p class="arrow">▼</p>
                  <i class="fa-solid fa-bookmark"></i>
                  <i class="fa-solid fa-clock-rotate-left"></i>
                </div>
              </div>
              <div class="question-answer">
                <p>This is question body</p>
                <p></p>
                <div class="author">
                  <small>asked "Timestamp"</small>
                  <div class="auth-details">
                    <i class="fa-solid fa-user-tie"></i>
                    <p>MrCodeCamp</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="comments">
              <div class="comment">
                <p>This is comment - <span>User name</span></p>
                <small>Timestamp</small>
              </div>

              <div class="addcmt">
              <p class="showaddcmt" style="cursor: pointer; color: blue;">Add a comment</p>
              <div class="title">
                <ion-icon name="close-outline" class="closeBox"></ion-icon>
                <textarea
                  name=""
                  id="closetextBox"
                  cols="30"
                  rows="10"
                  placeholder="Add your comment ...."
                ></textarea>
                
                <button style="color: blue; background-color: white;">Add comment</button>
                <button style="color: red; background-color: white;">Discard</button>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../includes/script.ejs') %> 
    
    <%- include('../includes/end.ejs') %>