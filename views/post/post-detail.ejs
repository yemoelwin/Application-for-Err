  <body>

    <%- include('../includes/navigation.ejs') %>

      <div class="">    
        <main class="centered">
                <h1 class="_title"><%= post.title %></h1>
                <hr>
                <div class="_category">
                  <a href="#" class="category__padding"><%= post.category %></a>
                </div>
                <div class="__description">
                  <p class="_description"><%= post.description %></p>
                </div>
                <div class="_image">
                      <img src="<%= post.imageUrl %>" alt="<%= post.title %>">
                </div>
            </main>
      </div>
      
      <div class="comment">
      <div class="addcmt">
        <p class="showaddcmt" style="cursor: pointer; color: rgb(0, 0, 0)">
          Your Answer
        </p>
        <div class="title _textarea">
          <!-- <ion-icon name="close-outline" class="closeBox"></ion-icon> -->
          <textarea class="__textarea" name="" id="closetextBox" cols="30" rows="10" placeholder="Add your comment ...."></textarea>

          <button class="__button __a">
            Add Comment
          </button>
          
          <button class="__button __b">
            Discard
          </button>
        </div>
      </div>
      </div>

    
