<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="../css/login.css">
    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>

            <section class="login-section">

                <% if (errorMessage) { %>
                <div class="__errormessage __messageError"><p class="login__error"><%= errorMessage %></p></div>
                <% } %>
                <main class="main_login-form">


                    <form class="login-form" action="/new-password" method="POST">
                        <div class="login_form-control">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password">
                        </div>

                        <div class="__form-control">
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="submit-btn" type="submit">Update Password</button>
                        </div>
                    </form>

                </main>

            </section>

            <%- include('../includes/script.ejs') %>

                <%- include('../includes/end.ejs') %>