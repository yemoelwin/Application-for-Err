<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="../css/reset.css">
    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>

            <section class="reset-section">

                <% if (errorMessage) { %>
                <div class="__errormessage __messageError"><p class="login__error"><%= errorMessage %></p></div>
                <% } %>
                <main class="main_reset-form">

                    <form class="reset-form" action="/reset" method="POST">
                        <div class="reset_form-control">
                            <label for="email">E-Mail</label>
                            <input type="email" name="email" id="email">
                        </div>

                        <div class="__form-control reset_form-control">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="reset-btn" type="submit">Reset Password</button>
                        </div>
                    </form>

                </main>

            </section>

            <%- include('../includes/script.ejs') %>

                <%- include('../includes/end.ejs') %>